      <% var news = news || [] %>
      <section class="section main-section">
        <div class="card-content">
          <table>
            <thead>
              <tr>
                <th class="image-cell"></th>
                <th>News title</th>
                <th>News subtitle</th>
                <th>Created</th>
                <th>Edit && Delete</th>
              </tr>
            </thead>
            <tbody>
              <% if(news.length > 0) { %> 
              <% news.forEach(function(item) { %>
              <tr>
                <td class="image-cell">
                  <div class="image">
                    <img
                      src="/files/<%= item.new_image %>"
                      class="rounded"
                    />
                  </div>
                </td>
                <td data-label="Nomi" class="new title">
                  <%= item.new_title_eng %>
                </td>
                <td data-label="Kodi" class="new subtitle">
                  <%= item.new_subtitle_eng %>
                </td>

                <td data-label="Created">
                  <small class="text-gray-500" title="Oct 25, 2021">
                    <%= moment(item.createdAt).locale('uz-latn').format("LLL")%> 
                  </small>
                </td>
                <td class="actions-cell">
                  <div class="buttons right nowrap">
                    <button data-news = "<%= JSON.stringify(item) %>"  class="edit_btn button small green --jb-modal" data-target="sample-modal-2"
                      type="button">
                      <span class="icon"><i class="mdi mdi-pencil-outline"></i></span>
                  </button>
                  <button data-new_id = "<%= item.new_id %>" class="delete_btn button small red --jb-modal" data-target="sample-modal"
                      type="button">
                      <span class="icon"><i class="mdi mdi-trash-can"></i></span>
                  </button>
                  </div>
                </td>
              </tr>
              <% }) %>
              <% } else { %>
              <tr>
                <td colspan="5" class="text-center" style="text-align: center;">
                  <h3>No news found</h3>
                </td>
              </tr>
              <% } %> 
            </tbody>
          </table>
          <div class="table-pagination">
            <div class="flex items-center justify-between">
              <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
                <nav aria-label="Table navigation">
                  <ul class="inline-flex items-center" class="buttons" style="display: flex;">
                    <li>
                      <a class="button" href = "/admin/product?offset=<%= offset %>" class="px-3 py-1 rounded-md rounded-l-lg focus:outline-none focus:shadow-outline-purple"
                        aria-label="Previous">
                       <
                      </a>
                    </li>
                    <% for(var i = 1; i <= count; i++) {%> 
                    <li>
                      <a class="button" href= "/admin/product?offset=<%= i %>" 
                        <% if(offset === i-1) {%> 
                          class="px-3 py-1 text-white transition-colors duration-150 bg-purple-600 border border-r-0 border-purple-600 rounded-md focus:outline-none focus:shadow-outline-purple"
                        <% } else { %> 
                          class="px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple"
                        <% } %> >
                        <%= i %>
                      </a>
                    </li>
                    <% } %> 
                    <li>
                      <a class="button" href = "/admin/product?offset=<%= offset+2 %>" class="px-3 py-1 rounded-md rounded-r-lg focus:outline-none focus:shadow-outline-purple"
                        aria-label="Next">
                       >
                      </a>
                    </li>
                  </ul>
                </nav>
              </span>

                <small>Page <%= offset %> of <%= count %></small>
            </div>
        </div>
