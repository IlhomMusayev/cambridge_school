                <div class="field-body">
                  <div class="field file">
                    <label class="upload control" style="width: 100%">
                      <a class="button light" style="width: 100%"> Upload </a>
                      <input
                        type="file"
                        name="new_image"
                        style="width: 100%"
                        required
                        multiple
                      />
                    </label>
                  </div>
                </div>
              </div>
              <!-- <hr> -->
            </section>
            <footer class="modal-card-foot">
              <button type="button" class="button --jb-modal-close">
                Cancel
              </button>
              <button type="submit" class="button green">Submit</button>
            </footer>
          </form>
        </div>
